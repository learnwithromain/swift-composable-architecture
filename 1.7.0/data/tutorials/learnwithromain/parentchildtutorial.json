 store: StoreOf<ChildFeature>","    ","    var body: some View {","        VStack {","            Text(\"ChildView\")","            Button(\"Button\") {","                store.send(.buttonTapped)","            }","        }","    }","}","","#Preview {","    ChildView(store: .init(","        initialState: .init(),","        reducer: {","            ChildFeature()","        }))","}"],"syntax":"swift","identifier":"01-01-01-code0001.swift","fileType":"swift"},"01-01-01-code0002.swift":{"fileName":"ParentFeature.swift","highlights":[],"type":"file","content":["import ComposableArchitecture","import SwiftUI","","@Reducer","struct ParentFeature {","    @ObservableState","    struct State {","        var child: ChildFeature.State","    }","    ","    enum Action {","        case child(ChildFeature.Action)","    }","    ","    var body: some ReducerOf<Self> {","        Scope(state: \\.child, action: \\.child) {","            ChildFeature()","        }","        ","        Reduce { state, action in","            switch action {","            case .child(.buttonTapped):","                return .none","            }","        }","        ._printChanges()","    }","}","","struct ParentView: View {","    let store: StoreOf<ParentFeature>","    ","    var body: some View {","        VStack {","            ChildView(store: store.scope(","                state: \\.child,","                action: \\.child","            ))","        }","    }","}",""],"syntax":"swift","identifier":"01-01-01-code0002.swift","fileType":"swift"}}}